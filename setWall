#!/usr/bin/env sh
#  ____       _ __        __    _ _ 
# / ___|  ___| |\ \      / /_ _| | |
# \___ \ / _ \ __\ \ /\ / / _` | | |
#  ___) |  __/ |_ \ V  V / (_| | | |
# |____/ \___|\__| \_/\_/ \__,_|_|_|
#
# Sets any given image as wallpaper/ Desktop Background
#
# Dependencies: feh, dunst

DEST="$HOME/Library/Pictures"
FLAGS=" --no-fehbg --bg-scale"
WALL=$DEST"/wall"

[ -e $DEST ] || mkdir -p $DEST

cp "$1" $WALL

feh $FLAGS $WALL
[ $? -eq 0 ] && dunstify -u normal -t 3000 -a "System ðŸ’»" "Wallpaper Changed"

